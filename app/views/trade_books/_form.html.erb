<%= form_for @trade_book, :html => { :class => 'form-horizontal form-model' } do |f| %>
  <div class="form-group">
    <%= f.label :stock_id, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.number_field :stock_id, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :trade_time, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.datetime_select :trade_time, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :price, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :price, :class => 'text-field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  trade_books_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
